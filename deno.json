{
  "imports": {
    "~/": "./src/"
  },
  "tasks": {
    "dev": "deno run --allow-all npm:astro dev",
    "build": "deno run --allow-all npm:astro build",
    "check": "deno run --allow-all npm:astro check",
    "format": "deno fmt",
    "preview": "deno run --allow-all npm:wrangler pages dev ./dist",
    "deploy": "deno task build && deno run --allow-all npm:wrangler pages deploy ./dist -- --browser=false"
  },
  "fmt": {
    "useTabs": true,
    "indentWidth": 4,
    "proseWrap": "preserve",
    "exclude": ["**/*.json"]
  }
}
