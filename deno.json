{
  "imports": {
    "~/": "./src/"
  },
  "tasks": {
    "dev": "deno run --allow-all npm:astro dev",
    "build": "deno run --allow-all npm:astro build",
    "check": "deno run --allow-all npm:astro check",
    "format": "deno fmt",
    "preview": "dx wrangler pages dev",
    "deploy": "deno task build && dx wrangler pages deploy"
  },
  "fmt": {
    "useTabs": true,
    "indentWidth": 4,
    "proseWrap": "preserve",
    "exclude": ["**/*.json"]
  }
}
