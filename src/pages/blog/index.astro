---
import { getCollection } from "astro:content";
import Base from "@layouts/Base.astro";

const posts = await getCollection('posts');
---

<Base>
	<p>Page 12</p>
	<h1>Blog</h1>

	<ul>
		{ posts && posts.map((post) => (
			<li>
				<a
					href={ `/blog/${ post.slug }/` }
				>
					{ post.data.title }
				</a>
			</li>
		))}
	</ul>
</Base>
