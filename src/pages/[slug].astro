---
import path from "node:path";

import '../global.css'

export async function getStaticPaths() {
	const posts = await Astro.glob('../posts/**/*.md')
	return posts.map(post => ({
		params: {
			slug: path.basename(post.file).split(".")[0],
		},
		props: {
			post
		},
	}))
}

const { Content } = Astro.props.post
---
<Content />

<style>
	:global(body) {
		background: #dff;
	}
</style>
